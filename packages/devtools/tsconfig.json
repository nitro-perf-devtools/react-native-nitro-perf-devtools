{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "lib",
    "paths": {
      "@nitro-perf-devtools/core": ["../core/src"],
      "@nitro-perf-devtools/ai": ["../devtools-ai/src"],
      "@nitro-perf-devtools/rozenite": ["./src"]
    }
  },
  "include": ["src/**/*", "react-native.ts", "rozenite.config.ts"]
}
