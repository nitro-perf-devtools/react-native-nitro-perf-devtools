{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "paths": {
      "@nitro-perf-devtools/core": [
        "./packages/core/src"
      ],
      "@nitro-perf-devtools/rozenite": [
        "./packages/devtools/src"
      ],
      "@nitro-perf-devtools/ai": [
        "./packages/devtools-ai/src"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "nitrogen"
  ],
  "extends": "expo/tsconfig.base"
}
