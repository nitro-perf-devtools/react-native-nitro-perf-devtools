{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "paths": {
      "react-native-nitro-perf": ["./packages/react-native-nitro-perf/src"],
      "nitro-perf-devtools": ["./packages/nitro-perf-devtools/src"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "lib", "nitrogen"]
}
