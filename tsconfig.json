{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "paths": {
      "@nitroperf/core": ["./packages/core/src"],
      "@nitroperf/devtools": ["./packages/devtools/src"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "lib", "nitrogen"]
}
